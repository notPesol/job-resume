<% layout("/boilerplate") -%>

<%- partial("alert") -%> 

  <div class="container">
    <h1 class="text-center">REGISTER</h1>
    <form id="form" action="/user/register" method="POST">
      <div class="mb-3">
        <label for="firstName" class="form-label">Firstname</label>
        <input name="firstName" type="text" class="form-control" id="firstName" required>
      </div>
      <div class="mb-3">
        <label for="lastName" class="form-label">Lastname</label>
        <input name="lastName" type="text" class="form-control" id="lastName" required>
      </div>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input required name="username" type="text" class="form-control" id="username">
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" type="password" class="form-control" id="password" required>
      </div>
      <div class="mb-3">
        <!-- for show alert -->
        <div id="liveAlertPlaceholder"></div>
        <label for="rePassword" class="form-label">Re-Password</label>
        <input name="rePassword" type="password" class="form-control" id="rePassword" required>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <% block('footer').append('<script src="/js/validate.js"></script>') %> 
